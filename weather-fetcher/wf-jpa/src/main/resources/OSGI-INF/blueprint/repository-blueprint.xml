<?xml version="1.0" encoding="UTF-8"?>
<blueprint
        xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        xmlns:jpa="http://aries.apache.org/xmlns/jpa/v2.0.0"
        xmlns:tx="http://aries.apache.org/xmlns/transactions/v2.0.0"
        xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
>

    <jpa:enable />

    <bean id="requestDataRepo" class="com.wfproject.persistence.repository.impl.RequestDataRepositoryImpl"/>

    <service ref="requestDataRepo" interface="com.wfproject.persistence.repository.RequestDataRepository"/>

    <bean id="dataSource" class="org.mariadb.jdbc.MariaDbDataSource">
        <property name="url" value="jdbc:mariadb://localhost:3306/weatherstats"/>
        <property name="user" value="statsuser"/>
        <property name="password" value="statspass"/>
    </bean>

    <service interface="javax.sql.DataSource" ref="dataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="request-stats-mariadb"/>
        </service-properties>
    </service>
</blueprint>
